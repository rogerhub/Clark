<div style="text-align:center;">
<h2 class="lead">Reset Password</h2>
<div style="margin-bottom:10px;"></div>
<p class="lead">Great! Please pick a new password for your account. It must be at least 6 characters long.</p>
<%= form_tag("/login/resetdo",:method => "post",:id=>"rd_form") do %>
<%= javascript_include_tag "sha512" %>
<script type="text/javascript">
	var levelone = "<%= get_level_one %>";
</script>
<input type="hidden" name="rd_newpassword" id="rd_newpassword" value="" />
<input type="hidden" name="rd_hash" id="rd_hash" value="<%= @hashval %>" />
<table cellspacing="0" style="margin:20px auto;margin-top:15px;">
	<tr><td style="text-align:right;padding-right:4px;">Password:</td><td style="text-align:left;"><input type="password" id="newpw" tabindex="1" /></td></tr>
	<tr><td colspan="2"><button type="submit" id="submit_button" class="blue awesome" style="width:70px;margin-top:10px;" tabindex="3" onclick="javascript:if ($('#newpw').val().length < 6){ alert('Your password must be at least 6 characters long.'); return false;}$('#rd_newpassword').val(hex_sha512($('#newpw').val() + levelone));adjustelementbutton(this);$('#rd_form').submit();">Submit</button></td></tr>
</table>
<% end %>
</div>